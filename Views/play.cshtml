<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link href="Content/CSS/bootstrap.css" rel="stylesheet" type="text/css">
    <title>Rock Paper Scissor</title>
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-4 col-sm-4 col-lg-4">
          <center><h3>@Model[0].GetName()</h3></center>
          <center><h3>@Model[0].GetHand()</h3></center>

        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
          <center><h3>Win</h3>
            @foreach (var name in Model)
            {
              <h3>@name.GetName()</h3>
            }
          <button action="/play" type="submit" name="button" class="btn btn-lg">Click to play!</button></center>

        </div>
        <div class="col-md-4 col-sm-4 col-lg-4">
          <h3><center><h3>@Model[1].GetName()</h3></center></h3>
          <center><h3>@Model[1].GetHand()</h3></center>

        </div>

      </div>

    </div>
  </body>
</html>
